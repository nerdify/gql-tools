{
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": ["node_modules/**"]
}
